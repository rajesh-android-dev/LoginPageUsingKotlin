<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:paddingBottom="@dimen/bgPaddingTop"
    android:paddingLeft="@dimen/bgPaddingLeft"
    android:orientation="vertical"
    android:paddingRight="@dimen/bgPaddingLeft"
    android:paddingTop="@dimen/bgPaddingTop"
    tools:context="com.kara.rajesh.loginpage.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/log_in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleTextSize" />

        <View
            android:layout_below="@+id/tv_login"
            android:layout_alignLeft="@+id/tv_login"
            android:layout_alignRight="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerheight"
            android:background="@color/colorUl"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bgPaddingTop"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bgPaddingLeft"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:textColorHint="@android:color/white"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/bgPaddingLeft"
        android:text="@string/do_not_sign_out"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:layout_marginTop="@dimen/bgPaddingLeft"
        android:textColor="@android:color/white"
        android:background="@drawable/boxframe_button"/>
</LinearLayout>
